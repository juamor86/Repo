<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/alert_new_iv"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="@dimen/margin_tinny"
        android:layout_marginBottom="@dimen/margin_tinny"
        android:contentDescription="@string/attention_icon_alt"
        android:src="@drawable/ic_alert"
        app:layout_constraintBottom_toBottomOf="@id/app_cv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/app_cv" />


    <androidx.cardview.widget.CardView
        android:id="@+id/app_cv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/attention_item_height"
        android:layout_marginHorizontal="@dimen/results_cv_margin_h"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginBottom="@dimen/margin_default"
        app:cardBackgroundColor="@color/review"
        app:cardCornerRadius="@dimen/splash_Card_radius"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/app_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_top_small"
                android:layout_marginEnd="@dimen/margin_default"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:textColor="@color/unselected_button_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/arrow_iv"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/description" />

            <ImageView
                android:id="@+id/arrow_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/margin_tinny"
                android:layout_marginEnd="@dimen/attention_item_arrow_margin"
                android:layout_marginBottom="@dimen/margin_tinny"
                android:contentDescription="@string/right_arrow_icon_alt"
                android:src="@drawable/right_arrow_button_ic"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>