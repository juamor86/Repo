<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_default"
    app:cardCornerRadius="@dimen/landscape_size_10">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/importance_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_double"
            android:fontFamily="@font/open_sans"
            android:textColor="#1d2124"
            android:textSize="@dimen/text_size_12"
            android:textStyle="normal"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Importancia alta" />

        <View
            android:id="@+id/importance_v"
            android:layout_width="@dimen/landscape_size_8"
            android:layout_height="@dimen/landscape_size_10"
            android:background="@color/yellow"
            android:layout_marginStart="@dimen/margin_double"
            app:layout_constraintTop_toTopOf="@id/importance_tv"
            app:layout_constraintBottom_toBottomOf="@id/importance_tv"
            app:layout_constraintStart_toEndOf="@id/importance_tv"/>

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_double"
            android:fontFamily="@font/open_sans"
            android:gravity="end"
            android:textColor="#1d2124"
            android:textSize="@dimen/text_size_12"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toEndOf="@id/importance_tv"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="12/04/2021" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_double"
            android:fontFamily="@font/open_sans_semi_bold"
            android:textColor="#1d2124"
            android:textSize="@dimen/text_size_14"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/importance_tv"
            tools:text="Nombre del aviso" />

        <TextView
            android:id="@+id/description_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_double"
            android:fontFamily="@font/open_sans"
            android:textColor="#1d2124"
            android:textSize="@dimen/text_size_14"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_tv"
            tools:text="Breve descripciÃ³n del aviso. En este caso, es un aviso con importancia alta." />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>