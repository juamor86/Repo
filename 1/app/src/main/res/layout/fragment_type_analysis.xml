<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".presentation.analysis.type.AnalysisTypeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_left_righ"
        android:layout_marginEnd="@dimen/margin_left_righ"
        android:orientation="vertical">

        <TextView
            style="@style/TitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_analysis_title"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/margin_toolbar" />

        <TextView
            style="@style/SubtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_analysis_description"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/margin_default_double" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_default_analysis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/default_analysis_list_item" />

    </LinearLayout>

</FrameLayout>