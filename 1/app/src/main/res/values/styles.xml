<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowBackground">@color/grey_bg</item>
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="android:colorControlHighlight">@color/acapulco</item>
    </style>

    <style name="TabButtonSelected" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/margin_selected_button</item>
        <item name="android:paddingEnd">@dimen/margin_selected_button</item>
    </style>

    <style name="TabButtonUnSelected" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/unselected_button_text</item>
        <item name="android:paddingStart">@dimen/margin_default</item>
        <item name="android:paddingEnd">@dimen/margin_default</item>
    </style>

    <style name="TitleText">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_22</item>
        <item name="android:textColor">@color/blue_black</item>
    </style>

    <style name="SubtitleText">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/blue_black</item>
    </style>

    <style name="TitleCardAnalysisText">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/card_title_analysis</item>
    </style>

    <style name="DescriptionCardAnalysisText">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">@dimen/text_size_12</item>
        <item name="android:textColor">@color/card_description_analysis</item>
    </style>

    <style name="ButtonCenteredWhiteText">
        <item name="android:fontFamily">@font/open_sans_regular_italic</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogTitleText">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/green_dark</item>
    </style>

    <style name="DialogSubtitleText">
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="DialogCancelTitle">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/unselected_button_text</item>
    </style>

    <style name="DialogCancelText">
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/unselected_button_text</item>
    </style>

    <style name="DialogCancelButtonText">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/red_orange</item>
    </style>

    <style name="DialogAcceptButtonText">
        <item name="android:fontFamily">@font/open_sans_bold</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="PrimaryButton">
        <item name="android:fontFamily">@font/open_sans_semi_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/sel_button_enable_disable_bg</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:paddingStart">@dimen/margin_default</item>
        <item name="android:paddingEnd">@dimen/margin_default</item>
    </style>

    <style name="PrimaryButton.CancelButton">
        <item name="android:background">@drawable/sel_boolean_button_bg</item>
        <item name="android:textColor">@color/sel_boolean_button_text_color</item>
        <item name="drawableTint">@color/sel_boolean_button_text_color</item>
    </style>

</resources>
