<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Widget.MyTheme.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="elevationOverlayEnabled">false</item>
        <item name="elevation">0dp</item>
        <item name="labelVisibilityMode">unlabeled</item>
        <item name="itemIconSize">18dp</item>
        <item name="itemIconTint">@drawable/bottom_icon_color</item>
        <item name="itemBackground">@drawable/bottom_nav_icon_bg</item>
        <item name="android:paddingVertical">@dimen/default_margin_half</item>
    </style>

    <!--Text region-->
    <style name="BoldText">
        <item name="fontFamily">@font/baloo_semibold</item>
    </style>

    <style name="SemiBoldText">
        <item name="fontFamily">@font/baloo_medium</item>
    </style>

    <style name="RegularText">
        <item name="fontFamily">@font/baloo_regular</item>
    </style>

    <style name="BoldText.TitleStyle">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/alabaster</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SemiBoldText.EditTextHintStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="BoldText.ResumeCardTitleStyle">
        <item name="android:textColor">@color/alabaster</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="SemiBoldText.ResumeCardSubtitleStyle">
        <item name="android:textColor">@color/alabaster</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RegularText.TextInputStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/alabaster</item>
    </style>

    <style name="BoldText.TitleStyle.DatePickerTitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mauvelous</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="SemiBoldText.ButtonText">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="RegularText.DateItemText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="BoldText.FocusItemText">
        <item name="android:textColor">@color/alabaster</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RegularText.RadioButtonStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="SemiBoldText.RadioButtonTabStyle">
        <item name="android:textSize">18sp</item>
    </style>
    <!--End text region-->


    <style name="SemiBoldText.DatePickerHeaderSelection">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/mauvelous</item>
    </style>

    <style name="SemiBoldText.YearSelection" parent="Widget.MaterialComponents.MaterialCalendar.YearNavigationButton">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BoldText.DaySelected" parent="Widget.MaterialComponents.MaterialCalendar.Day.Selected">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/french_pink</item>
    </style>

    <style name="BoldText.DayStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="RoundedOutlinedbox">
        <item name="boxCornerRadiusBottomEnd">@dimen/corner_dimen_edit_text</item>
        <item name="boxCornerRadiusBottomStart">@dimen/corner_dimen_edit_text</item>
        <item name="boxCornerRadiusTopEnd">@dimen/corner_dimen_edit_text</item>
        <item name="boxCornerRadiusTopStart">@dimen/corner_dimen_edit_text</item>
    </style>

    <style name="RoundedOutlinedbox.TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/polar</item>
        <item name="hintTextAppearance">@style/SemiBoldText.EditTextHintStyle</item>
        <item name="boxStrokeColor">@drawable/edit_text_stroke_color</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/SemiBoldText</item>
    </style>

    <style name="HomeCardStyle">
        <item name="background">@color/dove_gray</item>
        <item name="cardCornerRadius">@dimen/resume_card_corner_radius</item>
        <item name="cardElevation">3dp</item>
    </style>

    <style name="RoundedOutlinedbox.DropDownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="hintTextColor">@color/polar</item>
        <item name="hintTextAppearance">@style/SemiBoldText.EditTextHintStyle</item>
        <item name="endIconTint">@drawable/dropdown_icon_color_selector</item>
        <item name="boxStrokeColor">@drawable/edit_text_stroke_color</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@style/SemiBoldText</item>
    </style>

    <!--Date picker-->
    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/polar</item>
        <item name="colorOnPrimary">@color/mauvelous</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent
        </item>
        <item name="materialCalendarHeaderTitle">@style/BoldText.TitleStyle.DatePickerTitle</item>
        <item name="materialCalendarHeaderSelection">@style/SemiBoldText.DatePickerHeaderSelection
        </item>
        <item name="materialCalendarYearNavigationButton">@style/SemiBoldText.YearSelection</item>
        <item name="daySelectedStyle">@style/BoldText.DaySelected</item>
        <item name="dayStyle">@style/BoldText.DayStyle</item>

    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <!--Button region-->

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/SemiBoldText.ButtonText</item>
        <item name="backgroundTint">@null</item>
        <item name="android:background">@drawable/button_gradient_bg</item>
        <item name="android:paddingHorizontal">32dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
    </style>

    <style name="RadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textAppearance">@style/RegularText.RadioButtonStyle</item>
        <item name="android:textColor">@color/gray</item>
        <item name="buttonTint">@color/chantilly</item>
    </style>

    <style name="RadioButtonTabStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textAppearance">@style/SemiBoldText.RadioButtonTabStyle</item>
        <item name="android:button">@null</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/radio_button_tab_background_selectable</item>
        <item name="android:textColor">@drawable/radio_button_tab_text_color_selector</item>
    </style>
    <!--End button region-->

</resources>