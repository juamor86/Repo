<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.splash.SplashActivity">


    <LinearLayout
        android:id="@+id/splash_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_grey_bg"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:src="@drawable/img_red_es" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_gravity="bottom"
            android:layout_weight="0.4"
            android:src="@drawable/ic_logo_junta" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_gravity="bottom"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_weight="1"
            android:src="@drawable/img_feder" />


    </LinearLayout>

    <TextView
        android:id="@+id/title_tv"
        style="@style/TitleText.Big"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="1dp"
        android:text="@string/splash_title"
        android:layout_marginBottom="@dimen/margin_default"
        app:layout_constraintBottom_toTopOf="@+id/subtitle_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/subtitle_tv"
        style="@style/SubtitleText.OnBoarding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_default_triple"
        android:layout_marginRight="@dimen/margin_default_triple"
        android:layout_marginBottom="@dimen/margin_default_quadruple"
        android:elevation="1dp"
        android:gravity="center"
        android:text="@string/splash_text"
        app:layout_constraintBottom_toTopOf="@+id/bottomSplashLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="visible"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:elevation="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/splash_footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/splash_background" />

    <ImageView
        android:id="@+id/bottomSplashLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_default_large"
        app:layout_constraintBottom_toTopOf="@+id/splash_footer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_logo_junta"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/topSplashLogo"
        android:layout_width="200dp"
        android:layout_height="85dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_junta_splash"
        android:visibility="visible"/>

</androidx.constraintlayout.widget.ConstraintLayout>