<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/apps_swipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:filterTouchesWhenObscured="true">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="es.juntadeandalucia.msspa.saludandalucia.presentation.apps.AppsFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/apps_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants">

            <TextView
                android:id="@+id/apps_section_title_tv"
                style="@style/TitleText.Section"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_default_double"
                android:layout_marginTop="@dimen/margin_default_double"
                android:layout_marginRight="@dimen/margin_default_double"
                android:text="@string/title_fragment_apps"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/apps_section_subtitle_tv"
                style="@style/SubtitleText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin_default_double"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginRight="@dimen/margin_default_double"
                android:layout_marginBottom="@dimen/margin_default_double"
                android:text="@string/subtitle_fragment_apps"
                android:visibility="gone"
                app:layout_constraintBottom_toTopOf="@id/apps_rv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/apps_section_title_tv" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/apps_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_default_double"
                android:layout_marginTop="@dimen/margin_default_double"
                android:layout_marginRight="@dimen/margin_default_double"
                android:layout_marginBottom="@dimen/margin_default_double"
                android:scrollbars="none"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/apps_section_subtitle_tv"
                tools:listitem="@layout/view_item_app" />

            <ImageView
                android:id="@+id/empty_header_iv"
                android:layout_width="@dimen/info_icon_size"
                android:layout_height="@dimen/info_icon_size"
                android:layout_marginTop="@dimen/default_header_margin"
                android:src="@drawable/ic_alert_info"
                app:layout_constraintBottom_toTopOf="@+id/empty_tv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/apps_section_title_tv" />

            <TextView
                android:id="@+id/empty_tv"
                style="@style/DisclaimerText.Empty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_default_huge"
                android:layout_marginTop="@dimen/margin_default_huge"
                android:layout_marginEnd="@dimen/margin_default_huge"
                android:autoLink="web|phone|email"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/empty_header_iv"
                tools:text="@string/apps_empty" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/empty_group"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:constraint_referenced_ids="empty_header_iv, empty_tv"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>