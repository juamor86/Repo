<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view_cl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:fitsSystemWindows="true"
    tools:context="es.juntadeandalucia.msspa.saludandalucia.presentation.preferences.PreferencesFragment">

    <TextView
        android:id="@+id/text_header_tv"
        style="@style/TitleText.Header.Dynamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_menu"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/content_ll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/default_header_margin"
        android:background="@drawable/sh_rounded_rect_top"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/preferences_title_tv"
                    style="@style/TitleText.Section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_section_default"
                    android:layout_marginTop="@dimen/margin_default_large"
                    android:layout_marginRight="@dimen/margin_section_default"
                    android:text="@string/notifications_section_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <ImageView
                    android:id="@+id/notification_icon_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_section_default"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_bell"
                    app:layout_constraintBottom_toBottomOf="@id/notifications_title_tv"
                    app:layout_constraintEnd_toStartOf="@id/notifications_title_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/notifications_title_tv" />

                <TextView
                    android:id="@+id/notifications_title_tv"
                    style="@style/Preferences.Section"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default_large"
                    android:text="@string/notifications_section_title"
                    app:layout_constraintBottom_toTopOf="@id/notifications_tv"
                    app:layout_constraintEnd_toStartOf="@id/notifications_sw"
                    app:layout_constraintStart_toEndOf="@id/notification_icon_iv"
                    app:layout_constraintTop_toBottomOf="@+id/preferences_title_tv" />

                <TextView
                    android:id="@+id/notifications_tv"
                    style="@style/SubtitleText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default"
                    android:maxLines="1"
                    android:text="@string/preferences_notifications"
                    app:autoSizeTextType="uniform"
                    app:layout_constraintEnd_toStartOf="@id/notifications_sw"
                    app:layout_constraintStart_toStartOf="@id/notifications_title_tv"
                    app:layout_constraintTop_toBottomOf="@id/notifications_title_tv" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/notifications_sw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_section_default"
                    app:layout_constraintBottom_toBottomOf="@id/notifications_title_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/notifications_title_tv"
                    app:layout_constraintTop_toTopOf="@id/notifications_title_tv" />

                <TextView
                    android:id="@+id/notifications_phone_tv"
                    style="@style/SubtitleText.Light.Italic"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default"
                    app:layout_constraintEnd_toEndOf="@id/notifications_sw"
                    app:layout_constraintStart_toStartOf="@id/notifications_title_tv"
                    app:layout_constraintTop_toBottomOf="@id/notifications_tv"
                    tools:text="NÂº de mÃ³vil dado de alta: 123456789"
                    tools:visibility="gone" />

                <TextView
                    android:id="@+id/permission_title_tv"
                    style="@style/TitleText.Section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_section_default"
                    android:layout_marginTop="@dimen/margin_default_large"
                    android:layout_marginRight="@dimen/margin_section_default"
                    android:text="@string/preferences_permission_tittle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/notifications_phone_tv" />

                <TextView
                    android:id="@+id/notification_permission_title_tv"
                    style="@style/Preferences.Section"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default_large"
                    android:text="@string/preferences_notif_permission_title"
                    app:layout_constraintEnd_toStartOf="@+id/pref_notification_permission_sw"
                    app:layout_constraintStart_toEndOf="@+id/notification_permission_icon_iv"
                    app:layout_constraintTop_toBottomOf="@+id/permission_title_tv" />

                <ImageView
                    android:id="@+id/notification_permission_icon_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_section_default"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_notifications"
                    app:layout_constraintBottom_toBottomOf="@+id/notification_permission_title_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/notification_permission_title_tv" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/pref_notification_permission_sw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_section_default"
                    app:layout_constraintBottom_toBottomOf="@+id/notification_permission_title_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/notification_permission_title_tv" />

                <TextView
                    android:id="@+id/notifications_permission_description"
                    style="@style/SubtitleText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default"
                    android:text="@string/preferences_notif_permission_description"
                    app:layout_constraintEnd_toEndOf="@+id/notification_permission_title_tv"
                    app:layout_constraintStart_toEndOf="@+id/notification_permission_icon_iv"
                    app:layout_constraintTop_toBottomOf="@+id/notification_permission_title_tv" />


                <TextView
                    android:id="@+id/camera_permission_title_tv"
                    style="@style/Preferences.Section"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default_large"
                    android:text="@string/camera_permission_tittle"
                    app:layout_constraintEnd_toStartOf="@+id/camera_permission_sw"
                    app:layout_constraintStart_toEndOf="@+id/camera_permission_icon_iv"
                    app:layout_constraintTop_toBottomOf="@+id/notifications_permission_description" />

                <ImageView
                    android:id="@+id/camera_permission_icon_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_section_default"
                    android:importantForAccessibility="no"
                    android:src="@drawable/ic_camera"
                    android:padding="6dp"
                    app:layout_constraintBottom_toBottomOf="@+id/camera_permission_title_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/camera_permission_title_tv" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/camera_permission_sw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_section_default"
                    app:layout_constraintBottom_toBottomOf="@+id/camera_permission_title_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/camera_permission_title_tv" />

                <TextView
                    android:id="@+id/camera_permission_description"
                    style="@style/SubtitleText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default"
                    android:text="@string/camera_permission_description"
                    app:layout_constraintEnd_toEndOf="@+id/camera_permission_title_tv"
                    app:layout_constraintStart_toStartOf="@+id/camera_permission_title_tv"
                    app:layout_constraintTop_toBottomOf="@+id/camera_permission_title_tv" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
