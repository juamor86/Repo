<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/user_logged_status_icon_size"
    android:layout_height="@dimen/user_logged_status_icon_size"
    android:padding="@dimen/default_padding">

    <ImageView
        android:id="@+id/user_no_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/sh_circle_light_grey"
        android:src="@drawable/ic_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/user_iv"
        style="@style/UserLoggedIconText.Small"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="LG"
        tools:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>