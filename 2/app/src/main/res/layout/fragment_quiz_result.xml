<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:filterTouchesWhenObscured="true"
    tools:context="es.juntadeandalucia.msspa.saludandalucia.presentation.quiz.result.QuizResultFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:context="es.juntadeandalucia.msspa.saludandalucia.presentation.quiz.result.QuizResultFragment">

        <ImageView
            android:id="@+id/appointment_header_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:src="@drawable/ic_quiz_result_negative_header"
            app:layout_constraintBottom_toTopOf="@id/quiz_result_header_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginTop="@dimen/default_header_margin"/>

        <TextView
            android:id="@+id/quiz_result_header_tv"
            style="@style/TitleText.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_huge"
            android:layout_marginTop="@dimen/default_header_margin"
            android:layout_marginEnd="@dimen/margin_default_huge"
            android:text="@string/quiz_result_advice"
            app:layout_constraintBottom_toTopOf="@id/quiz_result_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appointment_header_iv" />

        <TextView
            android:id="@+id/quiz_result_tv"
            style="@style/DisclaimerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_huge"
            android:layout_marginTop="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default_huge"
            android:autoLink="web|phone|email"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/quiz_result_header_tv"
            tools:text="Según los datos que has aportado, pareces no tener síntomas o no son suficientes para determinar que tienes coronavirus. En cualquier caso el coronavirus se presenta con síntomas leves en la mayoría de ocasiones. Si los síntomas que tienes persisten o ves que no mejoras, vuelve a autoevaluarte dentro de 12 horas, y si en cualquier caso tu estado empeora, contacta telefónicamente con tu centro de salud y en caso de emergencia al XXX XXX XXX. Recuerda que los servicios médicos y de atención telefónica deben ser usados únicamente por pacientes que presenten gravedad. ¡Usémoslos con responsabilidad!" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/appointment_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:constraint_referenced_ids="result_appointment_top_line_vw,result_appointment_date_label_tv,result_appointment_date_tv,result_appointment_center_label_tv,result_appointment_center_tv,result_appointment_topic_label_tv,result_appointment_topic_tv,result_appointment_task_label_tv,result_appointment_task_tv,result_add_to_calendar_btn,result_cancel_appointment_btn,result_appointment_bottom_line_vw"
            tools:visibility="visible" />


        <View
            android:id="@+id/result_appointment_top_line_vw"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/margin_default_huge"
            android:layout_marginTop="@dimen/margin_default_triple"
            android:layout_marginEnd="@dimen/margin_default_huge"
            android:background="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/quiz_result_tv" />


        <TextView
            android:id="@+id/result_appointment_date_label_tv"
            style="@style/TitleText.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_huge"
            android:layout_marginTop="@dimen/margin_default_triple"
            android:layout_marginEnd="@dimen/margin_default_huge"
            android:text="@string/appointment_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/result_appointment_top_line_vw" />

        <TextView
            android:id="@+id/result_appointment_date_tv"
            style="@style/PlainText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default_triple"
            android:layout_marginEnd="@dimen/margin_default_huge"
            app:layout_constraintStart_toEndOf="@id/result_appointment_date_label_tv"
            app:layout_constraintTop_toBottomOf="@id/result_appointment_top_line_vw"
            tools:text="28/5/2020 8:54" />

        <TextView
            android:id="@+id/result_appointment_center_label_tv"
            style="@style/TitleText.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_huge"
            android:layout_marginTop="@dimen/margin_default_double"
            android:layout_marginEnd="@dimen/margin_default_huge"
            android:text="@string/appointment_center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/result_appointment_date_label_tv" />

        <TextView
            android:id="@+id/result_appointment_center_tv"
            style="@style/PlainText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default_double"
            android:layout_marginEnd="@dimen/margin_default_huge"
            app:layout_constraintStart_toEndOf="@id/result_appointment_center_label_tv"
            app:layout_constraintTop_toBottomOf="@id/result_appointment_date_tv"
            tools:text="Reyes Católicos S/N" />

        <TextView
            android:id="@+id/result_appointment_topic_label_tv"
            style="@style/TitleText.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_huge"
            android:layout_marginTop="@dimen/margin_default_double"
            android:layout_marginEnd="@dimen/margin_default_huge"
            android:text="@string/appointment_topic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/result_appointment_center_label_tv" />

        <TextView
            android:id="@+id/result_appointment_topic_tv"
            style="@style/PlainText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default_double"
            android:layout_marginEnd="@dimen/margin_default_huge"
            app:layout_constraintStart_toEndOf="@id/result_appointment_topic_label_tv"
            app:layout_constraintTop_toBottomOf="@id/result_appointment_center_tv"
            tools:text="Atención COVID-19" />

        <TextView
            android:id="@+id/result_appointment_task_label_tv"
            style="@style/TitleText.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_huge"
            android:layout_marginTop="@dimen/margin_default_double"
            android:layout_marginEnd="@dimen/margin_default_huge"
            android:text="@string/appointment_task"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/result_appointment_topic_label_tv" />

        <TextView
            android:id="@+id/result_appointment_task_tv"
            style="@style/PlainText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default_double"
            android:layout_marginEnd="@dimen/margin_default_huge"
            android:singleLine="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/result_appointment_task_label_tv"
            app:layout_constraintTop_toBottomOf="@id/result_appointment_topic_tv"
            tools:text="Consulta telefónica – Medicina de familia" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/result_cancel_appointment_btn"
            style="@style/PrimaryButton"
            android:layout_width="@dimen/button_width_default"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_huge"
            android:layout_marginTop="@dimen/margin_default_double"
            android:layout_marginEnd="@dimen/margin_default_huge"
            android:layout_marginBottom="@dimen/margin_default_double"
            android:text="@string/appointment_cancel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/result_appointment_task_tv"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/result_add_to_calendar_btn"
            style="@style/PrimaryButton"
            android:layout_width="@dimen/button_width_default"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_huge"
            android:layout_marginTop="@dimen/margin_default_double"
            android:layout_marginEnd="@dimen/margin_default_huge"
            android:layout_marginBottom="@dimen/margin_default_double"
            android:text="@string/add_to_calendar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/result_cancel_appointment_btn"
            />

        <View
            android:id="@+id/result_appointment_bottom_line_vw"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/margin_default_huge"
            android:layout_marginTop="@dimen/margin_default_triple"
            android:layout_marginEnd="@dimen/margin_default_huge"
            android:background="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/result_add_to_calendar_btn" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/accept_btn"
            style="@style/PrimaryButton"
            android:layout_width="@dimen/button_width_default"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_huge"
            android:layout_marginTop="@dimen/margin_default_double"
            android:layout_marginEnd="@dimen/margin_default_huge"
            android:layout_marginBottom="@dimen/margin_default_double"
            android:text="@string/quiz_result_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/result_appointment_bottom_line_vw"
            app:layout_constraintVertical_bias="1"/>
        
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
