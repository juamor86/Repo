<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/llPopupMainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="@dimen/margin_default_double"
    android:layout_marginEnd="@dimen/margin_default_double"
    android:background="@drawable/shape_rounded_rect"
    android:focusable="true"
    android:gravity="center">

    <ImageView
        android:id="@+id/icon_iv"
        android:layout_width="@dimen/dialog_icon_size"
        android:layout_height="@dimen/dialog_icon_size"
        android:layout_marginTop="@dimen/margin_default_quadruple"
        android:layout_marginBottom="@dimen/button_margin_bottom"
        android:src="@drawable/ic_alert_info"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_tv"
        style="@style/DialogTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_default_double"
        android:layout_marginTop="@dimen/margin_default_triple"
        android:gravity="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:text="@string/scanner_info_title"
        app:layout_constraintBottom_toTopOf="@id/message_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_iv"
        tool:text="Title"
        tool:visibility="visible" />

    <TextView
        android:id="@+id/message_tv"
        style="@style/DialogSubtitleText.Scanner"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="@dimen/margin_default_horizontal"
        android:layout_marginTop="@dimen/margin_default_triple"
        android:layout_marginEnd="@dimen/margin_default_horizontal"
        android:scrollbars="vertical"
        android:text="@string/scanner_info_text"
        android:textAlignment="center"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        app:layout_constraintBottom_toTopOf="@id/accept_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_tv" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/accept_btn"
        style="@style/PrimaryButton.ButtonDialog.Info"
        android:layout_width="@dimen/dialog_button_width"
        android:layout_marginTop="32dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dialog_margin_bottom"
        android:text="@string/accept"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/message_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>