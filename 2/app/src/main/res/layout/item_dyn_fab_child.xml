<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dynamic_quicklauncher_button_height"
    android:layout_marginBottom="@dimen/margin_default"
    android:elevation="@dimen/cardview_default_elevation"
    android:orientation="horizontal"
    app:cardCornerRadius="28dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title_tv"
            style="@style/DynamicText.QuickLauncher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginStart="@dimen/margin_default_double"
            android:layout_weight="1"
            android:maxLines="2"
            app:autoSizeTextType="uniform"
            tool:text="Datos de contacto" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginEnd="@dimen/margin_default"
            android:src="@drawable/ic_cursor" />
    </LinearLayout>

</androidx.cardview.widget.CardView>