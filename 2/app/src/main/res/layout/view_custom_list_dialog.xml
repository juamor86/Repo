<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sh_rounded_rect_top"
    android:paddingLeft="@dimen/margin_default"
    android:paddingTop="@dimen/margin_default"
    android:paddingRight="@dimen/margin_default"
    android:paddingBottom="@dimen/margin_default">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/custom_dialog_rv"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="@dimen/margin_section_default"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/cancel_btn"
        style="@style/PrimaryButton.ButtonDialog.CancelButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/margin_default_double"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default_double"
        android:text="@string/cancel"
        app:layout_constraintEnd_toStartOf="@+id/accept_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/custom_dialog_rv" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/accept_btn"
        style="@style/PrimaryButton.ButtonDialog"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/margin_default_double"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default_double"
        android:enabled="false"

        android:text="@string/accept"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cancel_btn"
        app:layout_constraintTop_toBottomOf="@id/custom_dialog_rv" />


</androidx.constraintlayout.widget.ConstraintLayout>