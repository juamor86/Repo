<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:filterTouchesWhenObscured="true"
    tools:context="es.juntadeandalucia.msspa.saludandalucia.presentation.covid.login.LoginCovidFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TitleText.Section.White"
        android:text="@string/covid_title_section"
        app:layout_constraintBottom_toTopOf="@id/content_cl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- region elements to the load user advice -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_stored_users"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4" />

    <TextView
        android:id="@+id/load_user_advice_tv"
        style="@style/UserAdvice.TopEnd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginEnd="@dimen/default_separator"
        android:text="@string/load_user_advice"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@id/guideline_vertical_stored_users"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

    <!-- end region elements to the load user advice -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/content_cl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_default_big_huge"
        android:background="@drawable/sh_rounded_rect_top"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">




        <androidx.core.widget.NestedScrollView
            android:id="@+id/login_covid_sv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/login_covid_cl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <TextView
                    android:id="@+id/title_tv"
                    style="@style/TitleText.Section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_section_default"
                    android:layout_marginTop="@dimen/margin_default_double"
                    android:layout_marginEnd="@dimen/margin_section_default"
                    android:text="@string/contact_information"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/identifier_tv"
                    style="@style/TitleText.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_section_default"
                    android:layout_marginTop="@dimen/margin_default_double"
                    android:layout_marginEnd="@dimen/margin_section_default"
                    android:text="@string/id"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title_tv" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/identifier_type_it"
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_section_default"
                    android:layout_marginTop="@dimen/margin_default"
                    android:layout_marginEnd="@dimen/margin_section_default"
                    android:hint="@string/select_id_type"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/identifier_tv">

                    <es.juntadeandalucia.msspa.saludandalucia.presentation.base.custom.view.CustomAutoCompleteTextView
                        android:id="@+id/identifier_type_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:minHeight="@dimen/min_height_combo_box"
                        android:drawableEnd="@drawable/ic_arrow_drop_down_black_24dp"
                        android:focusableInTouchMode="false"
                        android:inputType="textNoSuggestions"
                        android:paddingStart="@dimen/auto_complete_text_view_padding"
                        android:paddingEnd="@dimen/auto_complete_text_view_padding" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/identifier_it"
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_section_default"
                    android:layout_marginTop="@dimen/margin_default"
                    android:layout_marginEnd="@dimen/margin_section_default"
                    android:hint="@string/enter_id"
                    app:hintTextColor="@color/colorAccent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/identifier_type_it"
                    tools:helperText="@string/nuhsa_helper">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/identifier_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:imeOptions="actionNext"
                        android:inputType="textNoSuggestions"
                        android:maxLines="1"
                        android:nextFocusForward="@id/birthday_et" />

                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:id="@+id/birthday_tv"
                    style="@style/TitleText.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_section_default"
                    android:layout_marginTop="@dimen/margin_default_double"
                    android:layout_marginEnd="@dimen/margin_section_default"
                    android:text="@string/birthdate"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/identifier_it" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/birthday_it"
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_section_default"
                    android:layout_marginTop="@dimen/margin_default"
                    android:layout_marginEnd="@dimen/margin_section_default"
                    android:hint="@string/enter_birthdate"
                    app:hintTextColor="@color/colorAccent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/birthday_tv">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/birthday_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:imeOptions="actionNext"
                        android:maxLength="10"
                        android:nextFocusForward="@id/phone_et" />

                </com.google.android.material.textfield.TextInputLayout>

                <DatePicker
                    android:id="@+id/birthday_dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_section_default"
                    android:layout_marginTop="@dimen/margin_default"
                    android:layout_marginRight="@dimen/margin_section_default"
                    android:calendarViewShown="false"
                    android:datePickerMode="spinner"
                    android:focusable="true"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/birthday_it"
                    tools:visibility="gone" />

                <TextView
                    android:id="@+id/phone_tv"
                    style="@style/TitleText.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_section_default"
                    android:layout_marginTop="@dimen/margin_default_double"
                    android:layout_marginEnd="@dimen/margin_section_default"
                    android:text="@string/phone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/birthday_dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phone_prefix_it"
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_section_default"
                    android:layout_marginTop="@dimen/margin_default"
                    android:hint="@string/country"
                    app:hintTextColor="@color/colorAccent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/phone_tv">


                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:imeOptions="actionNext"
                        android:inputType="phone"
                        android:maxLines="1"
                        android:nextFocusForward="@id/phone_et" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phone_it"
                    style="@style/LoginTextInputLayoutStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_default_double"
                    android:layout_marginTop="@dimen/margin_default"
                    android:layout_marginEnd="@dimen/margin_section_default"
                    android:hint="@string/enter_phone"
                    app:hintTextColor="@color/colorAccent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintStart_toEndOf="@id/phone_prefix_it"
                    app:layout_constraintTop_toBottomOf="@id/phone_tv">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phone_et"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:maxLength="9"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>


                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_vertical_save_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.8" />

                <TextView
                    android:id="@+id/save_user_advice_tv"
                    style="@style/UserAdvice.BottomStart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:text="@string/save_user_advice"
                    android:visibility="gone"
                    app:layout_constraintBottom_toTopOf="@id/login_save_user_cb"
                    app:layout_constraintEnd_toEndOf="@id/guideline_vertical_save_user"
                    app:layout_constraintStart_toStartOf="@id/login_save_user_cb"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/health_prof_tv"
                    style="@style/TitleText.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_section_default"
                    android:layout_marginTop="@dimen/margin_default_double"
                    android:layout_marginEnd="@dimen/margin_section_default"
                    android:text="@string/health_prof_question"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/phone_prefix_it" />

                <RadioGroup
                    android:id="@+id/q_health_prof_rg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_section_default"
                    android:layout_marginTop="@dimen/margin_default_double"
                    android:layout_marginEnd="@dimen/margin_section_default"
                    android:gravity="start"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/health_prof_tv">

                    <RadioButton
                        android:id="@+id/q_health_prof_rg_yes"
                        style="@style/PrimaryButton.BooleanButton.Yes.Small"
                        android:layout_width="@dimen/login_boolean_button_width"
                        android:layout_height="@dimen/login_boolean_button_height"
                        android:layout_marginEnd="@dimen/margin_default_double"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/yes" />

                    <RadioButton
                        android:id="@+id/q_health_prof_rg_no"
                        style="@style/PrimaryButton.BooleanButton.No.Small"
                        android:layout_width="@dimen/login_boolean_button_width"
                        android:layout_height="@dimen/login_boolean_button_height"
                        android:layout_marginStart="@dimen/card_default_margin"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/no"
                        tools:checked="true" />

                </RadioGroup>


                <TextView
                    android:id="@+id/q_security_prof_tv"
                    style="@style/TitleText.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_section_default"
                    android:layout_marginTop="@dimen/margin_default_double"
                    android:layout_marginEnd="@dimen/margin_section_default"
                    android:text="@string/security_prof_question"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/q_health_prof_rg" />

                <RadioGroup
                    android:id="@+id/q_security_prof_rg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_section_default"
                    android:layout_marginTop="@dimen/margin_default_double"
                    android:layout_marginEnd="@dimen/margin_section_default"
                    android:gravity="start"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/q_security_prof_tv">

                    <RadioButton
                        android:id="@+id/q_security_prof_rg_yes"
                        style="@style/PrimaryButton.BooleanButton.Yes.Small"
                        android:layout_width="@dimen/login_boolean_button_width"
                        android:layout_height="@dimen/login_boolean_button_height"
                        android:layout_marginEnd="@dimen/margin_default_double"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/yes" />

                    <RadioButton
                        android:id="@+id/q_security_prof_rg_no"
                        style="@style/PrimaryButton.BooleanButton.No.Small"
                        android:layout_width="@dimen/login_boolean_button_width"
                        android:layout_height="@dimen/login_boolean_button_height"
                        android:layout_marginStart="@dimen/card_default_margin"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/no"
                        tools:checked="true" />

                </RadioGroup>

                <TextView
                    android:id="@+id/q_special_prof_tv"
                    style="@style/TitleText.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_section_default"
                    android:layout_marginTop="@dimen/margin_default_double"
                    android:layout_marginEnd="@dimen/margin_section_default"
                    android:text="@string/special_prof_question"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/q_security_prof_rg" />


                <RadioGroup
                    android:id="@+id/q_special_prof_rg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_section_default"
                    android:layout_marginTop="@dimen/margin_default_double"
                    android:layout_marginEnd="@dimen/margin_section_default"
                    android:gravity="start"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/q_special_prof_tv">

                    <RadioButton
                        android:id="@+id/q_special_prof_rg_yes"
                        style="@style/PrimaryButton.BooleanButton.Yes.Small"
                        android:layout_width="@dimen/login_boolean_button_width"
                        android:layout_height="@dimen/login_boolean_button_height"
                        android:layout_marginEnd="@dimen/margin_default_double"
                        android:button="@null"
                        android:drawablePadding="@dimen/margin_default"
                        android:gravity="start|center_vertical"
                        android:text="@string/yes" />

                    <RadioButton
                        android:id="@+id/q_special_prof_rg_no"
                        style="@style/PrimaryButton.BooleanButton.No.Small"
                        android:layout_width="@dimen/login_boolean_button_width"
                        android:layout_height="@dimen/login_boolean_button_height"
                        android:layout_marginStart="@dimen/card_default_margin"
                        android:button="@null"
                        android:gravity="center"
                        android:text="@string/no"
                        tools:checked="true" />

                </RadioGroup>


                <CheckBox
                    android:id="@+id/login_save_user_cb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_section_default"
                    android:layout_marginTop="@dimen/margin_section_default"
                    android:layout_marginEnd="@dimen/margin_section_default"
                    android:text="@string/save_user"
                    app:layout_constraintBottom_toTopOf="@id/login_covid_bt"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/q_special_prof_rg" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/login_covid_bt"
                    style="@style/PrimaryButton"
                    android:layout_width="@dimen/button_width_default"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_default_huge"
                    android:layout_marginTop="@dimen/margin_default_double"
                    android:layout_marginEnd="@dimen/margin_default_huge"
                    android:layout_marginBottom="@dimen/margin_default_double"
                    android:text="@string/enter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/login_save_user_cb"
                    app:layout_constraintVertical_bias="1" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>