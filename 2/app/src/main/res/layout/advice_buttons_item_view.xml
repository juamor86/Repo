<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- NEW ADVICE BUTTON-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/refuse_btn"
        style="@style/SecondaryButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/tab_default_height"
        android:text="@string/avisas_delete_text_button"
        android:layout_margin="@dimen/margin_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/accept_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/accept_btn"
        style="@style/PrimaryButton"
        android:layout_width="0dp"
        android:layout_height="@dimen/tab_default_height"
        android:text="@string/save"
        android:layout_margin="@dimen/margin_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/refuse_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>