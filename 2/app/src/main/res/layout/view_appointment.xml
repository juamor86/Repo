<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="es.juntadeandalucia.msspa.saludandalucia.presentation.quiz.result.QuizResultFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        tools:context="es.juntadeandalucia.msspa.saludandalucia.presentation.quiz.result.QuizResultFragment">

        <ImageView
            android:id="@+id/appointment_header_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="@dimen/margin_default_triple"
            android:src="@drawable/ic_calendar"
            app:layout_constraintBottom_toTopOf="@id/appointment_title_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/appointment_title_tv"
            style="@style/TitleText.Header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_huge"
            android:layout_marginTop="@dimen/margin_default_triple"
            android:layout_marginEnd="@dimen/margin_default_huge"
            android:text="@string/appointment_title"
            app:layout_constraintBottom_toTopOf="@id/appointment_text_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appointment_header_iv" />

        <TextView
            android:id="@+id/appointment_text_1"
            style="@style/DisclaimerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_huge"
            android:layout_marginTop="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default_huge"
            android:autoLink="web|phone|email"
            android:text="@string/appointment_text_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appointment_title_tv" />

        <View
            android:id="@+id/appointment_top_line_vw"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/margin_default_huge"
            android:layout_marginTop="@dimen/margin_default_triple"
            android:layout_marginEnd="@dimen/margin_default_huge"
            android:background="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appointment_text_1" />


        <TextView
            android:id="@+id/appointment_date_label_tv"
            style="@style/TitleText.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_huge"
            android:layout_marginTop="@dimen/margin_default_triple"
            android:layout_marginEnd="@dimen/margin_default_huge"
            android:text="@string/appointment_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appointment_top_line_vw" />

        <TextView
            android:id="@+id/appointment_date_tv"
            style="@style/PlainText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default_triple"
            android:layout_marginEnd="@dimen/margin_default_huge"
            app:layout_constraintStart_toEndOf="@id/appointment_date_label_tv"
            app:layout_constraintTop_toBottomOf="@id/appointment_top_line_vw"
            tools:text="28/5/2020 8:54" />

        <TextView
            android:id="@+id/appointment_center_label_tv"
            style="@style/TitleText.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_huge"
            android:layout_marginTop="@dimen/margin_default_double"
            android:layout_marginEnd="@dimen/margin_default_huge"
            android:text="@string/appointment_center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appointment_date_label_tv" />

        <TextView
            android:id="@+id/appointment_center_tv"
            style="@style/PlainText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default_double"
            android:layout_marginEnd="@dimen/margin_default_huge"
            app:layout_constraintStart_toEndOf="@id/appointment_center_label_tv"
            app:layout_constraintTop_toBottomOf="@id/appointment_date_tv"
            tools:text="Reyes Católicos S/N" />

        <TextView
            android:id="@+id/appointment_topic_label_tv"
            style="@style/TitleText.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_huge"
            android:layout_marginTop="@dimen/margin_default_double"
            android:layout_marginEnd="@dimen/margin_default_huge"
            android:text="@string/appointment_topic"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appointment_center_label_tv" />

        <TextView
            android:id="@+id/appointment_topic_tv"
            style="@style/PlainText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default_double"
            android:layout_marginEnd="@dimen/margin_default_huge"
            app:layout_constraintStart_toEndOf="@id/appointment_topic_label_tv"
            app:layout_constraintTop_toBottomOf="@id/appointment_center_tv"
            tools:text="Atención COVID-19" />

        <TextView
            android:id="@+id/appointment_task_label_tv"
            style="@style/TitleText.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_huge"
            android:layout_marginTop="@dimen/margin_default_double"
            android:layout_marginEnd="@dimen/margin_default_huge"
            android:text="@string/appointment_task"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appointment_topic_label_tv" />

        <TextView
            android:id="@+id/appointment_task_tv"
            style="@style/PlainText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginTop="@dimen/margin_default_double"
            android:layout_marginEnd="@dimen/margin_default_huge"
            android:singleLine="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/appointment_task_label_tv"
            app:layout_constraintTop_toBottomOf="@id/appointment_topic_tv"
            tools:text="Consulta telefónica – Medicina de familia" />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel_appointment_btn"
            style="@style/PrimaryButton"
            android:layout_width="@dimen/button_width_default"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_huge"
            android:layout_marginTop="@dimen/margin_default_double"
            android:layout_marginEnd="@dimen/margin_default_huge"
            android:layout_marginBottom="@dimen/margin_default_double"
            android:text="@string/appointment_cancel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appointment_task_tv"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/add_to_calendar_btn"
            style="@style/PrimaryButton"
            android:layout_width="@dimen/button_width_default"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_huge"
            android:layout_marginTop="@dimen/margin_default_double"
            android:layout_marginEnd="@dimen/margin_default_huge"
            android:layout_marginBottom="@dimen/margin_default_double"
            android:text="@string/add_to_calendar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cancel_appointment_btn"
            />

        <View
            android:id="@+id/appointment_bottom_line_vw"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginStart="@dimen/margin_default_huge"
            android:layout_marginTop="@dimen/margin_default_triple"
            android:layout_marginEnd="@dimen/margin_default_huge"
            android:background="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/add_to_calendar_btn" />


        <TextView
            android:id="@+id/appointment_text_2"
            style="@style/DisclaimerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default_huge"
            android:layout_marginTop="@dimen/margin_default_triple"
            android:layout_marginEnd="@dimen/margin_default_huge"
            android:layout_marginBottom="@dimen/margin_default_double"
            android:autoLink="all"
            android:linksClickable="true"
            android:text="@string/appointment_text_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appointment_bottom_line_vw" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
