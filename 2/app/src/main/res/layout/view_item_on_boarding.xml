<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/on_boarding_title_tv"
            style="@style/TitleText.OnBoarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/on_boarding_default_margin"
            android:layout_marginTop="@dimen/margin_default_large"
            android:layout_marginEnd="@dimen/on_boarding_default_margin"
            android:gravity="center_horizontal"
            android:textAllCaps="true"
            app:layout_constraintBottom_toTopOf="@id/on_boarding_iv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/validate_covid_cert_title" />


        <ImageView
            android:id="@+id/on_boarding_iv"
            android:layout_width="@dimen/on_boarding_default_image_size"
            android:layout_height="@dimen/on_boarding_default_image_size"
            android:layout_marginTop="@dimen/margin_default_large"
            android:layout_marginBottom="@dimen/margin_default_large"
            app:layout_constraintBottom_toTopOf="@id/on_boarding_text_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/on_boarding_title_tv"
            tools:src="@drawable/ic_vaccine" />

        <TextView
            android:id="@+id/on_boarding_text_tv"
            style="@style/SubtitleText.OnBoarding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/on_boarding_default_margin"
            android:layout_marginEnd="@dimen/on_boarding_default_margin"
            android:linksClickable="true"
            android:layout_marginBottom="@dimen/margin_default_large"
            android:gravity="center_horizontal"
            android:textColorLink="@color/colorAccent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/on_boarding_iv"
            tools:text="@string/hub_on_boarding_description" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>