<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/on_boarding_title_tv"
        style="@style/TitleText.Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/on_boarding_default_margin"
        android:layout_marginEnd="@dimen/on_boarding_default_margin"
        android:layout_marginTop="@dimen/margin_default_huge"
        android:text="@string/on_boarding_title"
        app:layout_constraintBottom_toTopOf="@id/on_boarding_text_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/on_boarding_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_on_boarding_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/on_boarding_text_tv"
        style="@style/SubtitleText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/on_boarding_default_margin"
        android:layout_marginTop="@dimen/margin_default_large"
        android:layout_marginEnd="@dimen/on_boarding_default_margin"
        android:text="@string/on_boarding_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/on_boarding_title_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>