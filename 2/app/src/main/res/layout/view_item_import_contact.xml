<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sel_list">

    <TextView
        android:id="@+id/type_contact_advice_tv"
        style="@style/DialogSubtitleText.Bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default_double"
        android:layout_marginEnd="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_default_double"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Casa" />

    <ImageView
        android:id="@+id/contact_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_contact_advice"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginStart="@dimen/margin_default_double"
        android:layout_marginBottom="@dimen/margin_default_double"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/type_contact_advice_tv" />

    <TextView
        android:id="@+id/contact_advice_tv"
        style="@style/TitleText.Notification"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_default"
        android:ellipsize="end"
        android:maxLines="2"
        app:layout_constraintBottom_toBottomOf="@+id/contact_icon_iv"
        app:layout_constraintStart_toEndOf="@id/contact_icon_iv"
        app:layout_constraintTop_toTopOf="@+id/contact_icon_iv"
        tools:text="645010203" />


</androidx.constraintlayout.widget.ConstraintLayout>