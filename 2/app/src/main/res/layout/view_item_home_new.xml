<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/news_card_width"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/margin_default"
    android:layout_marginEnd="@dimen/margin_default"
    android:layout_marginBottom="@dimen/margin_default"
    app:cardCornerRadius="@dimen/corner_radius_default">

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <ImageView
        android:id="@+id/new_home_header_iv"
        android:layout_width="match_parent"
        android:layout_height="@dimen/news_card_image_height"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/new_home_texts_ly"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/new_home_texts_ly"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_home_header_iv">

      <TextView
          android:id="@+id/new_home_title_tv"
          style="@style/TitleText"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginStart="@dimen/activity_horizontal_margin"
          android:layout_marginTop="20dp"
          android:layout_marginEnd="@dimen/activity_horizontal_margin"
          android:ellipsize="end"
          android:maxLines="3"
          tools:text="La cúpula del Hospital Virgen del Rocío se iluminará de verde esperanza durante la pandemia del COVID-19" />

      <TextView
          android:id="@+id/new_home_subtitle_tv"
          style="@style/SubtitleText"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_marginStart="@dimen/activity_horizontal_margin"
          android:layout_marginTop="@dimen/margin_default"
          android:layout_marginEnd="@dimen/activity_horizontal_margin"
          android:layout_marginBottom="@dimen/margin_default"
          android:ellipsize="end"
          android:maxLines="2"
          tools:text="El Servicio Andaluz de Salud..." />
    </LinearLayout>


  </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>