<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav_graph.xml"
    app:startDestination="@id/auth_webview_dest">

    <fragment
        android:id="@+id/auth_webview_dest"
        android:name="es.juntadeandalucia.msspa.authentication.presentation.login.fragments.web.AuthWebViewFragment"
        android:label=""
        tools:layout="@layout/fragment_auth_webview">
        <action
            android:id="@+id/action_auth_webview_dest_to_first_factor_no_nuhsa_dest"
            app:destination="@id/first_factor_no_nuhsa_dest" />
        <action
            android:id="@+id/action_auth_webview_dest_to_first_factor_basic_dest"
            app:destination="@id/first_factor_basic_dest" />
        <action
            android:id="@+id/action_auth_webview_dest_to_first_factor_reinforcement_dest"
            app:destination="@id/first_factor_reinforcement_dest" />
        <action
            android:id="@+id/action_auth_webview_dest_to_phone_validation_dest"
            app:destination="@id/phone_validation_dest" />
        <action
            android:id="@+id/action_auth_webview_dest_to_dnie_dest"
            app:destination="@id/login_dnie_dest" />

    </fragment>

    <fragment
        android:id="@+id/first_factor_no_nuhsa_dest"
        android:name="es.juntadeandalucia.msspa.authentication.presentation.login.fragments.personaldata.nonuhsa.LoginNoNuhsaFragment"
        android:label=""
        tools:layout="@layout/fragment_login_no_nuhsa">

    </fragment>

    <fragment
        android:id="@+id/qr_login_dest"
        android:name="es.juntadeandalucia.msspa.authentication.presentation.login.fragments.qr.LoginQRFragment"
        android:label=""
        tools:layout="@layout/fragment_login_qr">

        <action
            android:id="@+id/qr_login_to_pin_dest"
            app:destination="@id/pin_dest"
            app:enterAnim="@anim/slide_left"
            app:popExitAnim="@anim/slide_right" />


    </fragment>

    <fragment
        android:id="@+id/pin_dest"
        android:name="es.juntadeandalucia.msspa.authentication.presentation.login.fragments.qr.pin.PinFragment"
        android:label=""
        tools:layout="@layout/fragment_login_base">

        <action
            android:id="@+id/action_pin_dest_to_qr_login_dest"
            app:destination="@id/qr_login_dest"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:popExitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@+id/qr_login_dest"
            app:popUpToInclusive="true"/>

    </fragment>


    <fragment
        android:id="@+id/first_factor_basic_dest"
        android:name="es.juntadeandalucia.msspa.authentication.presentation.login.fragments.personaldata.basic.LoginBasicFragment"
        android:label=""
        tools:layout="@layout/fragment_login_base"></fragment>

    <fragment
        android:id="@+id/first_factor_reinforcement_dest"
        android:name="es.juntadeandalucia.msspa.authentication.presentation.login.fragments.personaldata.reinforced.LoginReinforcedFragment"
        android:label=""
        tools:layout="@layout/fragment_login_reinforced">
        <action
            android:id="@+id/first_factor_reinforcement_dest_to_second_factor_dest"
            app:destination="@id/second_factor_dest"
            app:enterAnim="@anim/slide_left"
            app:popExitAnim="@anim/slide_right" />
    </fragment>

    <fragment
        android:id="@+id/second_factor_dest"
        android:name="es.juntadeandalucia.msspa.authentication.presentation.login.fragments.secondfactor.SecondFactorFragment"
        android:label=""
        tools:layout="@layout/fragment_second_factor">
        <action
            android:id="@+id/action_second_factor_dest_to_auth_webview_dest"
            app:destination="@id/auth_webview_dest"
            app:popUpTo="@id/auth_webview_dest" />
    </fragment>

    <fragment
        android:id="@+id/phone_validation_dest"
        android:name="es.juntadeandalucia.msspa.authentication.presentation.login.fragments.phonevalidation.PhoneValidationFragment"
        android:label=""
        tools:layout="@layout/fragment_phone_validation">
        <action
            android:id="@+id/phone_validation_dest_to_second_factor_dest"
            app:destination="@id/second_factor_dest"
            app:enterAnim="@anim/slide_left"
            app:popExitAnim="@anim/slide_right" />
    </fragment>

    <fragment
        android:id="@+id/verification_qr_login_dest"
        android:name="es.juntadeandalucia.msspa.authentication.presentation.login.fragments.qr.verification.QRVerificationFragment"
        android:label=""
        tools:layout="@layout/fragment_qr_verification" />

    <fragment
        android:id="@+id/login_dnie_dest"
        android:name="es.juntadeandalucia.msspa.authentication.presentation.login.fragments.dni.login.LoginDnieFragment"
        android:label=""
        tools:layout="@layout/fragment_login_dnie">
    </fragment>

    <fragment
        android:id="@+id/scan_qr_dest"
        android:name="es.juntadeandalucia.msspa.authentication.presentation.login.fragments.qr.scanner.ScanQRFragment"
        tools:layout="@layout/fragment_scan_qr">

        <action
            android:id="@+id/action_scan_qr_to_qr_login_dest"
            app:destination="@id/qr_login_dest"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:popExitAnim="@anim/nav_default_exit_anim"
            app:popUpTo="@+id/qr_login_dest"
            app:popUpToInclusive="true"/>

    </fragment>

</navigation>